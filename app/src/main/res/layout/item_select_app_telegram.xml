<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_select_app_telegram"

    android:background="@color/colorPrimaryLight"
    android:layout_margin="@dimen/activity_horizontal_margin"
    >


    <ImageView

        android:layout_width="@dimen/select_app_icon_edge"
        android:layout_height="@dimen/select_app_icon_edge"
        android:id="@+id/telegram_icon_IV"
        android:src="@drawable/telegram_icon"
        android:padding="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="@dimen/select_app_text_view_width"
        android:textAlignment="center"
        android:layout_height="@dimen/select_app_icon_edge"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/telegram"
        android:id="@+id/textView"
        android:padding="@dimen/activity_vertical_margin"/>

    <CheckBox

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telegram_select_CB" />


</LinearLayout>